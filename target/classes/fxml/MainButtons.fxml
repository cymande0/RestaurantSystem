<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox layoutX="30.0" layoutY="19.0" prefHeight="700.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MenuButtonsController">

    <children>
        <Button fx:id="homeButton" disable="true" mnemonicParsing="false" onAction="#homePage" prefHeight="90.0" prefWidth="150.0" text="Home">
            <VBox.margin>
                <Insets bottom="25.0" left="10.0" right="20.0" top="25.0" />
            </VBox.margin>
        </Button>
        <Button fx:id="mainActionButton" disable="true" mnemonicParsing="false" onAction="#startProcess" prefHeight="90.0" prefWidth="150.0" text="Idz do sali">
            <VBox.margin>
                <Insets bottom="25.0" left="10.0" right="20.0" top="25.0" />
            </VBox.margin>
        </Button>
        <Button fx:id="foodMenuButton" disable="true" mnemonicParsing="false" onAction="#showResuarantMenu" prefHeight="90.0" prefWidth="150.0" text="Menu">
            <VBox.margin>
                <Insets bottom="25.0" left="10.0" right="20.0" top="25.0" />
            </VBox.margin>
        </Button>
        <Button fx:id="historyOfOrdersButton" disable="true" mnemonicParsing="false" onAction="#showHistoryOfChecks" prefHeight="90.0" prefWidth="150.0" text="Historia zamowien">
            <VBox.margin>
                <Insets bottom="25.0" left="10.0" right="20.0" top="25.0" />
            </VBox.margin>
        </Button>
        <Button fx:id="infoAuthorButton" disable="true" layoutY="500.0" mnemonicParsing="false" onAction="#showAuthorInfo" prefHeight="90.0" prefWidth="150.0" text="O autorze">
            <VBox.margin>
                <Insets bottom="25.0" left="10.0" right="20.0" top="25.0" />
            </VBox.margin>
        </Button>
        <Button alignment="CENTER" layoutY="500.0" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#quitApplication" prefHeight="90.0" prefWidth="150.0" text="Wyjscie">
            <VBox.margin>
                <Insets bottom="25.0" left="10.0" right="20.0" top="25.0" />
            </VBox.margin>
        </Button>
    </children>
</VBox>
